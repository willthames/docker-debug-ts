{
  "name": "@south-paw/koa-typescript",
  "version": "0.0.1",
  "description": "Simple boilerplate for a Koa server with Typescript, ESLint, Prettier and Jest.",
  "keywords": [],
  "homepage": "https://github.com/South-Paw/koa-typescript",
  "bugs": "https://github.com/South-Paw/koa-typescript/issues",
  "license": "MIT",
  "author": {
    "name": "Alex Gabites",
    "email": "hello@southpaw.co.nz",
    "url": "http://southpaw.co.nz/"
  },
  "files": [
    "dist/*"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/South-Paw/koa-typescript.git"
  },
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn ts:watch\" \"yarn start:watch\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn ts:watch\" \"yarn start:debug\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "test": "jest --forceExit --coverage --verbose",
    "test:watch": "yarn test --watchAll",
    "build": "yarn clean && yarn lint && yarn ts",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "start:debug": "nodemon --inspect dist/index.js",
    "ts": "tsc",
    "ts:watch": "tsc -w",
    "clean": "rimraf dist coverage",
    "format": "eslint --fix --ext .ts src && prettier -c src/**/*.ts"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@uswitch/koa-zipkin": "^1.3.2",
    "acorn": "^6.4.1",
    "axios": "^0.19.2",
    "dot-prop": "^5.2.0",
    "dotenv": "^8.2.0",
    "handlebars": "^4.7.6",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-hbs": "^0.9.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "koa-views": "^6.3.0",
    "typescript-logging": "^1.0.0",
    "zipkin": "^0.22.0",
    "zipkin-transport-http": "^0.22.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.1.3",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-hbs": "^1.0.5",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa-views": "^2.0.4",
    "@types/koa__cors": "^3.0.1",
    "@types/node": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "private": true
}
